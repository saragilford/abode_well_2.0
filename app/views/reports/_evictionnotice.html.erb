
<div class="evict-notice-form">


  <form action="/buildings/<%=@building.id%>/eviction_notices" method="POST" class="report-form">
    <h2 class="form-group">Report Your Eviction Notice</h2>
    <div class="form-group">
      <label for="typeOfLetter">Type of Eviction Notice:</label>
        <div class="letter-dropdown">


          <select class="form-control" name="category">
            <% @letter_options.each do |option| %>
              <option><%= option %> </option>
            <% end %>
          </select>
        </div>
    </div>

    <div class="form-group">
      <input type="hidden" name="class" value="Eviction Notice">
    </div>

    <div class="form-group">
      <label for="evictionComment">Comment: </label>
      <textarea class="form-control comment-box" rows="3" input type="text"  name="comment" placeholder="Provide more detail..."></textarea>
    </div>
    <button type="submit" class="btn btn-default form-button form-group">Submit</button>
  </form>
</div>