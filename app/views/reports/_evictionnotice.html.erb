
  <div class="evict-notice-form EvictionNotice">

    <h2>Report Your Eviction Notice</h2>

    <form class="form-inline" action="/buildings/<%=@building.id%>/eviction_notices" method="POST">
      <div class="form-group">
        <label for="typeOfLetter">Type of letter:</label>
          <div class="letter-dropdown">
            <select name="category">
              <% @letter_options.each do |option| %>
                <option><%= option %> </option>
              <% end %>
            </select>
            <label for="evictionComment">Comment: </label>
            <input type="text" class="form-control" name="comment" placeholder="Provide more detail...">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
      </div>

      <!-- <div class="form-group">
      </div> -->

    </form>
  </div>

