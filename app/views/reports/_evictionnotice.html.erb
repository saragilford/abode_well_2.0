
  <div class="evict-notice-form EvictionNotice">

    <h2>Report Your Eviction Notice</h2>

    <form class="form-horizonal" action="/buildings/<%=@building.id%>/eviction_notices" method="POST">
      <div class="form-group">
        <label for="typeOfLetter" class="col-sm-0 control label">Type of letter:</label>
        <div class="col-sm-1">
          <div class="letter-dropdown">
            <select name="category">
              <% @letter_options.each do |option| %>
                <option><%= option %> </option>
              <% end %>
            </select>
          </div>
        </div>
      </div>
      <div classs="form-group">
        <label for="evictionComment">Comment: </label>
        <textarea class="form-control" rows="3" input type="text"  name="comment" placeholder="Provide more detail..."></textarea>
        <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </form>
  </div>

