<div class="lease-increase-form LeaseIncrease">

    <h2>Tell Us About Your Rent Increase</h2>

  <form class="form-horizontal" action="/buildings/<%=@building.id%>/rent_notices" method="POST">
    <div class="form-group">
      <label class="sr-only" for="previousRent">Previous Rent</label>
      <div class="input-group">
        <div class="input-group-addon">$</div>
          <input type="integer" class="form-control rent-amount"  name="prior_rent" placeholder="Amount">
      </div>
    </div>

    <div class="form-group">
      <label class="sr-only" for="newRent">New Rent: $</label>
      <div class="input-group">
        <div class="input-group-addon">$</div>
          <input type="integer" class="form-control rent-amount" name="new_rent" placeholder="Amount">
        </div>
    </div>

    <div class="form-group">
      <label for="evictionComment">Comment: </label>
        <textarea class="form-control" rows="3" input type="text"  name="comment" placeholder="Provide more detail..."></textarea>
        <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
  </form>

</div>

